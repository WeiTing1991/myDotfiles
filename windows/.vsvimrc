" ============================================================================
" .vsvimrc for Visual Studio
" ============================================================================

let mapleader = " "

" ============================================================================
" BASIC SETTINGS
" ============================================================================

set ignorecase
set smartcase
set incsearch
set hlsearch
set number
set relativenumber
set clipboard=unnamed
set scrolloff=0
set backspace=indent,eol,start

nnoremap <Esc> <Esc>
nnoremap <C-c> <Esc>
nnoremap <Esc> <Esc>:noh<CR>
nnoremap <C-c> :noh<CR>
nnoremap <Space> :noh<CR>

inoremap jk <Esc>


nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz

" nnoremap <C-w>' <C-w>v
nnoremap <C-w>' :vsc Window.NewVerticalTabGroup<CR>
nnoremap <C-w>5 <C-w>s

nnoremap <C-i> :vsc Window.NextTab<CR>
nnoremap <C-o> :vsc Window.PreviousTab<CR>
nnoremap <leader>i :vsc Window.NextTab<CR>
nnoremap <leader>o :vsc Window.PreviousTab<CR>

nnoremap G Gzz
nnoremap n nzzzv
nnoremap N Nzzzv

vnoremap < <gv
vnoremap > >gv

vnoremap J :m '>+1<CR>gv=gv
vnoremap K :m '<-2<CR>gv=gv
nnoremap J mzJ`z

" not working the c-k
nnoremap <C-k> <C-w>k
nnoremap <C-j> <C-w>j
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l

" <A-j> :vsc Edit.LineDown<CR>
" <A-k> :vsc Edit.LineUp<CR>
nnoremap <C-q> :vsc Window.CloseDocumentWindow<CR>

" nnoremap <C-p> :vsc Edit.GoToFile<CR>
nnoremap <C-S-p> :vsc Window.QuickLaunch<CR>
nnoremap <C-e> :vsc View.SolutionExplorer<CR>

" LSP
nnoremap gr :vsc Edit.FindAllReferences<CR>
nnoremap gd :vsc Edit.GoToDefinition<CR>
nnoremap gi :vsc Edit.GoToImplementation<CR>
nnoremap gD :vsc Edit.PeekDefinition<CR>

nnoremap <leader>r :vsc Refactor.Rename<CR>
nnoremap <F2> :vsc Refactor.Rename<CR>
nnoremap g. :vsc View.QuickActions<CR>
nnoremap K :vsc Edit.QuickInfo<CR>
nnoremap gO :vsc Edit.GoToSymbol<CR>
nnoremap <leader>. :vsc Edit.FormatDocument<CR>

" nnoremap <C-e> :vsc View.SolutionExplorer<CR>
nnoremap <C-e> :vsc SolutionExplorer.SyncWithActiveDocument<CR>
nnoremap <leader>h :vsc Window.HideShowAllToolWindows<CR>

" nnoremap <leader>/ :vsc View.Terminal<CR>
" nnoremap <C-'> :vsc View.FullScreen<CR>

" Error list
nnoremap <leader>x :vsc View.ErrorList<CR>

" nnoremap ]d :vsc View.NextError<CR>
" nnoremap [d :vsc View.PreviousError<CR>
" nnoremap <C-`> :vsc Window.AutoHide<CR>


