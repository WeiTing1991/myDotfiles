{
  "vscode_custom_css.imports": [
    "file:///${userHome}/.dotfiles/.vscode/custom-styles.css"
    // "file:///C:/Users/MyUserName/Documents/custom.css"
  ],
  // =============================================================================
  // EDITOR SETTINGS
  // =============================================================================
  "editor.fontFamily": "Hack Nerd Font, JetBrainsMono Nerd Font, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.lineNumbers": "relative",
  "editor.tabSize": 2,
  "editor.indentSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "off",
  "editor.rulers": [120],
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.showFoldingControls": "always",
  "editor.folding": true,
  "editor.glyphMargin": true,
  "editor.scrollBeyondLastLine": false,
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": false,
  "zenMode.hideStatusBar": false,
  "editor.hover.enabled": true,
  "breadcrumbs.enabled": true,
  "editor.renderLineHighlight": "line",
  // "editor.colorDecorators": false,
  // "problems.decorations.enabled": false,
  // "editor.gotoLocation.multipleReferences": "goto",
  // "editor.gotoLocation.multipleDefinitions": "goto",
  // "editor.gotoLocation.multipleDeclarations": "goto",
  // "workbench.editor.enablePreviewFromQuickOpen": false,
  // "editor.gotoLocation.multipleImplementations": "goto",
  // "editor.gotoLocation.multipleTypeDefinitions": "goto",

  // =============================================================================
  // PERFORMANCE OPTIMIZATIONS
  // =============================================================================
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.lightbulb.enabled": "off",
  "editor.inlayHints.enabled": "off",
  "editor.parameterHints.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.selectionHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.smoothScrolling": false,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.cursorBlinking": "blink",
  "editor.stickyScroll.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.semanticHighlighting.enabled": true,
  "editor.matchBrackets": "near",
  "editor.links": false,
  "editor.formatOnSave": false,
  "editor.hover.delay": 1000,
  "editor.hover.sticky": true,
  "editor.suggest.preview": false,
  "editor.suggest.showStatusBar": false,
  "editor.quickSuggestions": {
    "comments": false,
    "other": true,
    "strings": false
  },
  "editor.quickSuggestionsDelay": 100,
  "editor.useTabStops": false,
  "editor.find.autoFindInSelection": "never",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // =============================================================================
  // WORKBENCH SETTINGS
  // =============================================================================
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "none",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.highlightModifiedTabs": false,
  "workbench.editor.restoreViewState": false,
  "workbench.editor.revealIfOpen": false,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "default",
  "workbench.statusBar.visible": true,
  "workbench.reduceMotion": "on",
  "workbench.list.smoothScrolling": false,
  "workbench.enableExperiments": false,
  "workbench.tips.enabled": false,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.tree.renderIndentGuides": "onHover",
  "workbench.tree.indent": 14,
  "workbench.tree.enableStickyScroll": false,
  "window.density.editorTabHeight": "compact",
  "workbench.iconTheme": "vs-seti",

  // =============================================================================
  // FILE MANAGEMENT
  // =============================================================================
  "files.hotExit": "off",
  "files.restoreUndoStack": false,
  "files.exclude": {
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/.git": true
  },
  "files.watcherExclude": {
    "**/__pycache__/**": true,
    "**/.git/**": true,
    "**/.next/**": true,
    "**/*.log": true,
    "**/coverage/**": true
  },

  // =============================================================================
  // SEARCH SETTINGS
  // =============================================================================
  "search.exclude": {
    "**/__pycache__": true,
    "**/.next": true,
    "**/*.map": true,
    "**/*.min.js": true,
    "**/build": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true
  },

  // =============================================================================
  // GIT SETTINGS
  // =============================================================================
  "git.autofetch": false,
  "git.decorations.enabled": false,
  "git.enableSmartCommit": true,
  "scm.diffDecorations": "gutter",
  "git.openRepositoryInParentFolders": "always",

  // =============================================================================
  // GITHUB COPILOT
  // =============================================================================
  "github.copilot.enable": {
    "*": true,
    "markdown": false,
    "plaintext": true,
    "scminput": false
  },
  "github.copilot.advanced": {
    "inlineSuggestEnable": true,
    "length": 10
  },
  "github.copilot.nextEditSuggestions.enabled": false,

  // =============================================================================
  // TERMINAL SETTINGS
  // =============================================================================
  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 2000,
  "terminal.integrated.fastScrollSensitivity": 5,
  "terminal.integrated.gpuAcceleration": "on",

  // =============================================================================
  // EXTENSIONS
  // =============================================================================
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "extensions.ignoreRecommendations": true,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "cSpell.enabled": true,
  "cSpell.enabledFileTypes": {
    "*": false,
    "markdown": true
  },
  "cSpell.userWords": ["pymdownx"],

  // =============================================================================
  // MISCELLANEOUS
  // =============================================================================
  "telemetry.telemetryLevel": "off",
  "telemetry.feedback.enabled": false,
  "update.showReleaseNotes": false,
  "projectManager.git.baseFolders": ["~/project"],

  "errorLens.enabled": true,
  "errorLens.delay": 10,
  "errorLens.followCursor": "activeLine",
  "errorLens.followCursorMore": 1,
  "errorLens.editorHoverPartsEnabled": {
    "messageEnabled": false,
    "sourceCodeEnabled": false,
    "buttonsEnabled": false
  },
  "editor.accessibilitySupport": "off",

  // =============================================================================
  // LANGUAGE-SPECIFIC SETTINGS
  // =============================================================================
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.tabSize": 2
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.semanticHighlighting.enabled": false,
    "editor.tabSize": 2
  },
  "C_Cpp.intelliSenseEngine": "default",
  // "C_Cpp.enhancedColorization": "enabled",
  // "C_Cpp.errorSquiggles": "enabled",
  // "C_Cpp.autocomplete": "default",
  // "C_Cpp.suggestSnippets": true,
  // "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
  // "C_Cpp.inlayHints.parameterNames.enabled": true,
  // "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

  "clangd.enable": false,
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--function-arg-placeholders=true",
    "--header-insertion=iwyu",
    "--pch-storage=memory",
    "--compile-commands-dir=.",
    "--completion-style=detailed"
  ],
  "clangd.fallbackFlags": ["-std=c++20"],
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.tabSize": 4
  },
  "[cmake]": {
    "editor.defaultFormatter": "KylinIdeTeam.cmake-intellisence"
  },
  "cmake.buildBeforeRun": false,
  "cmake.configureOnEdit": false,
  "cmake.configureOnOpen": false,

  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "python.languageServer": "Default",
  "python.analysis.typeCheckingMode": "standard",
  "ruff.lint.enable": true,

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[plaintext]": {
    "editor.wordWrap": "on",
    "editor.rulers": []
  },
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.useModernNet": true,

  "prettier.singleQuote": false,
  "prettier.semi": true,
  "prettier.tabWidth": 2,
  "prettier.printWidth": 120,
  "prettier.requireConfig": false,

  // =============================================================================
  // VIM SETTINGS
  // =============================================================================
  // ysa"[
  // cs"'
  // ds"
  "vim.leader": " ",
  // "vim.easymotion": true,
  "vim.surround": true,
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(250, 240, 170, 0.5)",
  // "vim.matchpairs": "(:),{:},[:]",
  "vim.foldfix": true,
  "vim.autoindent": true,
  "vim.showmodename": true,

  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-k>": false
  },

  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-c>"],
      "after": ["<Esc>"]
    },
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],

  "vim.normalModeKeyBindings": [
    {
      "before": ["<Esc>"],
      "commands": [":nohl"]
    },
    // hack
    {
      "before": ["p"],
      "after": ["P"]
    },
    {
      "before": ["<C-c>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<Tab>"],
      "after": ["z", "a"]
    },
    {
      "before": ["<C-d>"],
      "after": ["<C-d>", "z", "z"]
    },
    {
      "before": ["<C-u>"],
      "after": ["<C-u>", "z", "z"]
    },
    {
      "before": ["G"],
      "after": ["G", "z", "z"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "l"],
      "commands": ["workbench.action.quickTextSearch"]
    },
    {
      "before": ["<leader>", "f", "g"],
      "commands": ["television.ToggleTextFinder"]
    },
    {
      "before": ["<leader>", "f", "b"],
      "commands": ["workbench.action.showAllEditors"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["projectManager.listProjectsNewWindow"]
    },
    {
      "before": ["<leader>", "t", "c"],
      "commands": ["github.copilot.completions.toggle"]
    },
    {
      "before": ["<leader>", "t", "t"],
      "command": ["workbench.action.selectTheme"]
    },
    {
      "before": ["g", "."],
      "commands": ["editor.action.codeAction"]
    },
    {
      "before": ["<leader>", ","],
      "commands": ["editor.action.formatDocument.multiple"]
    },
    {
      "before": ["-"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["_"],
      "commands": ["editor.action.blockComment"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["g", "I"],
      "commands": ["C_Cpp.SwitchHeaderSource"]
    }
    // {
    //   "before": ["g", "I"],
    //   "commands": ["clangd.switchheadersource"]
    // }
  ],

  "vim.visualModeKeyBindings": [
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["-"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["_"],
      "commands": ["editor.action.blockComment"]
    },
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    }
  ],
  "githubLocalActions.dockerDesktopPath": "/Applications/Docker.app",
  "workbench.colorTheme": "Default Light Modern",
  "workbench.navigationControl.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "titleBar",
  "chat.commandCenter.enabled": false
  // },
  // {
  //   "key": "ctrl+b c t",
  //   "command": "github.copilot.toggleCopilot"
  // },
}
