[color "diff"]
    meta = "#f8f8f2"
    frag = "#bd93f9 bold"
    old = "#ff5555 reverse"           # Dracula red
    new = "#50fa7b reverse"           # Dracula green
    whitespace = "red reverse"

[color "diff-highlight"]
    oldNormal = "#ff5555 reverse"
    oldHighlight = "#ffb86c 52"       # Orange on dark red
    newNormal = "#50fa7b reverse"
    newHighlight = "#8be9fd 22"       # Cyan on dark green

[interactive]
    diffFilter = diff-so-fancy --patch
