[user]
  name = WeiTing1991
	email = 72130405+WeiTing1991@users.noreply.github.com
  signingkey = ~/.ssh/id_ed25519.pub

[url "git@github.com:"]
  insteadOf = https://github.com/

[gpg]
  format = ssh

[gpg "ssh"]
  allowSignWithFile = ~/.ssh/allowed_signers
	allowedSignersFile = /Users/weitingchen/.ssh/allowed_signers

[init]
  defaultBranch = main

[commit]
  gpgsign = true

[core]
  editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RFX
  autocrlf = input

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[delta]
  side-by-side = false
  navigate = true
  line-numbers = true
  dark = true

[color]
  ui = true

