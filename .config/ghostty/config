# apparence
# font-family = "JetBrainsMonoNL Nerd Font"
font-family = "FiraCode Nerd Font"
window-title-font-family = "FiraCode Nerd Font"
font-size = 14
background = "0D0907"
# theme = gruvbox-material
# theme = GruvboxDarkHard
theme = Adventure
window-inherit-font-size=true

# cursor
# cursor-style = block
cursor-style-blink = false
cursor-color = white
shell-integration-features = no-cursor,sudo,title

background-opacity = 0.95
background-blur-radius = 20

macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
macos-option-as-alt = true
# window-save-state = never
unfocused-split-opacity = 0.8
window-padding-x = 4
window-padding-y = 4

window-colorspace = "display-p3"

# keybindings
keybind=clear

keybind = all:cmd+shift+,=reload_config

# windows
keybind = cmd+n=new_window
keybind = cmd+q=close_window

# tabs
keybind = cmd+shift+t=new_tab
keybind = ctrl+shift+t=new_tab
keybind = cmd+w=close_surface
keybind = ctrl+shift+n=next_tab
keybind = ctrl+shift+p=previous_tab

# copy and move
keybind = cmd+shift+c=copy_to_clipboard
keybind = cmd+shift+v=paste_from_clipboard
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+c=copy_to_clipboard

keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

# keybind = ctrl+5=new_split:right
# keybind = ctrl+'=new_split:down
keybind = ctrl+shift+'=new_split:down
keybind = ctrl+shift+5=new_split:right

