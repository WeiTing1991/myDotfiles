// Zed settings
{
  // Vim
  "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 200
  },
  "bottom_dock_layout": "contained",
  "completions": {
    "lsp_insert_mode": "replace_subsequence"
  },
  "confirm_quit": false,

  // Telemetry
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },

  // UI & Appearance
  "icon_theme": "Zed (Default)",
  "theme": {
    "mode": "dark",
    "light": "Dracula Light (Alucard",
    "dark": "One Dark"
  },
  "experimental.theme_overrides": {},

  "ui_font_size": 18,
  "ui_font_family": ".SystemUIFont",
  "ui_font_weight": 400,

  "buffer_line_height": "standard",
  "buffer_font_features": {
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "calt": true,
    "dlig": true
  },
  "buffer_font_size": 16,
  "buffer_font_family": "Iosevka Nerd Font",
  "buffer_font_weight": 400,

  // Editor Settings
  "relative_line_numbers": true,
  "wrap_guides": [80, 120],
  "show_whitespaces": "boundary",
  "lsp_document_colors": "inlay",
  "soft_wrap": "editor_width",
  "active_pane_modifiers": {
    "border_size": 0.8,
    "inactive_opacity": 0.8
  },
  "use_system_path_prompts": false,
  "use_system_prompts": false,

  "show_wrap_guides": true,
  "preferred_line_length": 120,
  "tab_size": 2,
  "hard_tabs": false,
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "format_on_save": "off",
  "autosave": "off",
  "restore_on_startup": "last_session",
  // Editor Visual Settings
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": true,
    "active_line_width": 2,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  // Search Settings
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true
  },

  // Tab Bar & Toolbar
  "tab_bar": {
    "show": false,
    "show_tab_bar_buttons": true,
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "code_actions": true,
    "selections_menu": true
  },
  "tabs": {
    "file_icons": false,
    "git_status": true,
    "close_position": "right",
    "activate_on_close": "history"
  },
  "auto_indent": false,
  "minimap": {
    "show": "never"
  },

  // Inline Features
  "inline_code_actions": true,
  "inlay_hints": {
    "enabled": false
  },
  "show_completion_documentation": true,
  "selection_highlight": true,

  // Project Panel
  "project_panel": {
    "button": true,
    "default_width": 350,
    "dock": "right",
    "entry_spacing": "standard",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "never"
    },
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "always"
    },
    "hide_root": false
  },
  // File Exclusions (matching VS Code)
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.vscode",
    "**/.idea",
    // "**/node_modules",
    "**/.serverless",
    "**/build",
    // "**/dist",
    "**/coverage",
    // "**/.venv",
    "**/__pycache__",
    "**/.ropeproject",
    "**/.pytest_cache",
    "**/.ruff_cache",
    // "**/bin",
    // "**/obj",
    // "**/bower_components",
    // "**/*.code-search",
    "**/.git/objects/**",
    "**/.git/subtree-cache/**",
    "**/.hg/store/**"
  ],
  // "file_scan_inclusions": [".env", ".venv"],
  // Outline Panel
  "outline_panel": {
    "dock": "right",
    "default_width": 350,
    "button": true,
    "file_icons": true,
    "folder_icons": true,
    "git_status": false,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },

  // Terminal
  "terminal": {
    "font_family": "Iosevka Nerd Font",
    "font_size": 14,
    "font_weight": 400,
    "button": true,
    "toolbar": {
      "breadcrumbs": false
    },
    "copy_on_select": true,
    "dock": "bottom",
    "default_width": null,
    "default_height": 600,
    "working_directory": "current_project_directory",
    "env": {
      "EDITOR": "zed -w",
      "VISUAL": "zed -w"
    },
    "blinking": "off",
    // "alternate_scroll": "off",
    // "option_as_meta": false,
    "shell": "system",
    // "line_height": "standard",
    "detect_venv": {
      "on": {
        "activate_script": "default",
        "directories": [".env", "env", ".venv", "venv"]
      }
    }
  },
  // Git Configuration
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 100,
    "branch_picker": null,
    "inline_blame": {
      "enabled": false
    },
    "hunk_style": "staged_hollow"
  },
  "git_panel": {
    "dock": "right"
  }
}
