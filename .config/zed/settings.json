// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet"
    },
  },
  "icon_theme": "Zed (Default)",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "base_keymap": "Emacs",
  "telemetry": {
    "metrics": false
  },
  "scrollbar": {
    "show": "never"
  },
  "vim_mode": true,
  "ui_font_size": 14,
  "ui_font_family": "",
  "buffer_font_size": 16,
  "buffer_font_family": "Hack Nerd Font",
  "buffer_font_weight": 500,
  "relative_line_numbers": true,
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "inlay_hints": {
    "enabled": true,
    "font_family": "Consolas"
  },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Ayu Dark"
  },
  "soft_wrap": "editor_width",
  "tab_size": 2,
  "format_on_save": "off",
  "project_panel": {
    "button": true,
    "default_width": 300,
    "dock": "right",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": null
    },
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "always"
    }
  },
  "terminal": {
    "font_family": "Hack Nerd Font Propo",
    "toolbar": {
      "title": false
    },
    "copy_on_select": true
  },
  "lsp": {
    "markdown": {
      "settings": {
        "lineLength": 120
      }
    },
    "dart": {
      "settings": {
        "lineLength": 120
      }
    }
  }
}
