// Zed settings
{
  // Core Settings
  "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 100
  },
  "bottom_dock_layout": "contained",
  // Telemetry
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  // UI & Appearance
  "icon_theme": "Zed (Default)",
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light",
    "dark": "One Dark"
  },
  "ui_font_size": 16,
  "buffer_line_height": "standard",
  "ui_font_family": "Zed Plex Sans",
  "ui_font_weight": 400,
  "buffer_font_size": 14,
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_weight": 200,
  // Editor Settings
  "relative_line_numbers": true,
  "show_whitespaces": "boundary",
  "soft_wrap": "editor_width",
  "show_wrap_guides": true,
  "wrap_guides": [120],
  "preferred_line_length": 120,
  "tab_size": 2,
  "hard_tabs": false,
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "format_on_save": "off",
  "autosave": "off",
  "restore_on_startup": "last_session",
  // Editor Visual Settings
  "scrollbar": {
    "show": "never"
  },
  "active_pane_modifiers": {
    "border_size": 0.0,
    "inactive_opacity": 0.8
  },
  "indent_guides": {
    "enabled": true,
    "active_line_width": 2,
    "coloring": "fixed"
  },
  // Search Settings
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },
  // Tab Bar & Toolbar
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true,
    "show_tab_bar_buttons": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "code_actions": true,
    "selections_menu": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": false,
    "close_position": "right"
  },
  // Inline Features
  "inline_code_actions": false,
  "inlay_hints": {
    "enabled": false
  },
  "show_completion_documentation": true,
  "selection_highlight": false,

  // Project Panel
  "project_panel": {
    "button": true,
    "default_width": 300,
    "dock": "right",
    "entry_spacing": "standard",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 16,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "never"
    },
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "always"
    },
    "hide_root": false
  },
  // File Exclusions (matching VS Code)
  "file_scan_exclusions": [
    "**/.git",
    // "**/node_modules",
    "**/__pycache__",
    // "**/dist",
    // "**/build",
    "**/.svn",
    "**/.hg",
    "**/.DS_Store",
    "**/Thumbs.db",
    // "**/.venv",
    // "**/bin",
    // "**/obj",
    "**/bower_components",
    "**/*.code-search",
    "**/.git/objects/**",
    "**/.git/subtree-cache/**",
    "**/.hg/store/**"
  ],
  // Outline Panel
  "outline_panel": {
    "dock": "right",
    "default_width": 300,
    "button": true,
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },
  // Terminal
  "terminal": {
    "font_family": "Hack Nerd Font Propo",
    "font_size": 14,
    "font_weight": 500,
    "button": true,
    "toolbar": {
      "breadcrumbs": false
    },
    "copy_on_select": true,
    "dock": "bottom",
    "default_width": null,
    "default_height": 500,
    "working_directory": "current_project_directory",
    "env": {},
    "blinking": "off",
    "alternate_scroll": "off",
    "option_as_meta": false,
    "shell": "system",
    "line_height": "standard",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    }
  },
  // Git Configuration
  "git": {
    "gutter_debounce": 100,
    "inline_blame": {
      "enabled": false
    },
    "git_gutter": "tracked_files",
    "hunk_style": "staged_hollow"
  },
  "git_panel": {
    "dock": "right"
  },
  // Diagnostics
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 100,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  // Copilot/AI Features
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "edit_predictions": {
    "disabled_globs": []
    // "mode": "eager",
    // "copilot": {
    //   "proxy": null,
    //   "proxy_no_verify": null,
    //   "enterprise_uri": null
    // },
    // "enabled_in_text_threads": false
  },
  // AI Agent
  "agent": {
    "default_profile": "ask",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "dock": "left"
  },
  // Default Formatter
  "formatter": "prettier",

  "file_types": {
    "Diff": ["dif"],
    "Json": ["json", "jsonc"],
    "C++": ["cpp", "cxx", "cc", "c++", "hpp", "hxx", "h++", "hh"],
    "C": ["C", "H"],
    "Python": ["py", "pyx", "pyi", "pyw"],
    "C#": ["cs", "csx"],
    "CMake": ["CMakeLists.txt"]
  },

  // Language Server Protocol (LSP) Settings
  "lsp": {
    // "prettier": {
    //   "print_width": 120,
    //   "semi": true,
    //   "single_quote": true,
    //   "trailing_comma": "es5"
    // },
    "biome": {
      "settings": {
        "config_path": "./biome.json"
      }
    },
    "omnisharp": {
      "binary": {
        "arguments": ["-lsp"]
      }
    },
    "pyright": {
      "settings": {
        // "pyright": {
        //   "disableOrganizeImports": false
        // },
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "standard",
          "extraPaths": ["./src", "./lib", "./backend"],
          "stubPath": "./typings",
          "autoSearchPaths": true,
          "autoImportCompletions": true,
          "useLibraryCodeForTypes": true
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          // "lineLength": 120,
          // "fixAll": true,
          "organizeImports": true
        }
      }
    },

    // C++ (clangd)
    "clangd": {
      "binary": {
        "arguments": [
          "--log=verbose",
          "--clang-tidy",
          "--background-index",
          "--completion-style=detailed",
          "--function-arg-placeholders",
          "--header-insertion=iwyu",
          "--pch-storage=memory",

          // Add diagnostic flags here:
          "--compile-commands-dir=.",
          "--fallback-style=none"
        ]
      },
      "initialization_options": {
        "clangdFileStatus": true,
        "usePlaceholders": true,
        "completeUnimported": true,
        "semanticHighlighting": true,
        // Add clang-tidy configuration:
        "fallbackFlags": ["-Wno-everything", "-Werror=return-type"]
      }
    }
  },

  // Language-specific Settings
  "languages": {
    // "JSON": {
    //   "formatter":{
    //     "language_servers": ["!biome", "prettier"],
    //   },
    //   // "formatter": "prettier",
    //   "tab_size": 2
    // },
    // "JSONC": {
    //   "formatter":{
    //     "language_servers": ["!biome", "prettier"],
    //   },
    //   "tab_size": 2
    // },
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!biome"]
    },
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!biome"]
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!biome"]
    },
    "TOML": {
      "tab_size": 2
    },
    "Markdown": {
      "remove_trailing_whitespace_on_save": false,
      "format_on_save": "off",
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 179
    },
    "Python": {
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["pyright", "ruff"],
      "tab_size": 2
    },
    "C": {
      "formatter": "auto",
      "tab_size": 2
    },
    "C++": {
      "formatter": "auto",
      "tab_size": 2
    },
    "CSharp": {
      "language_servers": ["omnisharp"],
      "formatter": "language_server",
      "tab_size": 4
    },
    "CMake": {
      "preferred_line_length": 179,
      "formatter": "language_server"
    }
  }
}
