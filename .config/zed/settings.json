// Zed settings
{
  // Vim
  "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 200
  },
  "bottom_dock_layout": "contained",
  "completions": {
  "lsp_insert_mode": "replace_subsequence"
  },
  "confirm_quit": true,

  // Telemetry
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },

  // UI & Appearance
  "icon_theme": "Zed (Default)",
  "theme": {
    "mode": "dark",
    "light": "Dracula Light (Alucard",
    "dark": "Dracula"
  },
  "experimental.theme_overrides": {},

  "ui_font_size": 18,
  "ui_font_family": ".ZedMono",
  "ui_font_weight": 400,

  "buffer_line_height": "standard",
  "buffer_font_features": {
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "calt": true,
    "dlig": true
  },
  "buffer_font_size": 16,
  "buffer_font_family": "Iosevka Nerd Font",
  "buffer_font_weight": 400,

  // Editor Settings
  "relative_line_numbers": true,
  "wrap_guides": [80, 120],
  "show_whitespaces": "boundary",
  "lsp_document_colors": "inlay",
  "soft_wrap": "editor_width",
  "active_pane_modifiers": {
    "border_size": 0.8,
    "inactive_opacity": 0.8
  },
  "use_system_path_prompts": false,
  "use_system_prompts": false,

  "show_wrap_guides": true,
  "preferred_line_length": 120,
  "tab_size": 2,
  "hard_tabs": false,
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "format_on_save": "off",
  "autosave": "off",
  "restore_on_startup": "last_session",
  // Editor Visual Settings
  "scrollbar": {
    "show": "never"
  },
  "indent_guides": {
    "enabled": true,
    "active_line_width": 2,
    "coloring": "fixed",
    "background_coloring": "disabled"
  },
  // Search Settings
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true
  },

  // Tab Bar & Toolbar
  "tab_bar": {
    "show": false,
    "show_tab_bar_buttons": true,
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "code_actions": true,
    "selections_menu": true
  },
  "tabs": {
    "file_icons": false,
    "git_status": true,
    "close_position": "right",
    "activate_on_close": "history"
  },
  "auto_indent": false,
  "minimap": {
    "show": "never"
  },

  // Inline Features
  "inline_code_actions": true,
  "inlay_hints": {
    "enabled": false
  },
  "show_completion_documentation": true,
  "selection_highlight": true,

  // Project Panel
  "project_panel": {
    "button": true,
    "default_width": 350,
    "dock": "right",
    "entry_spacing": "standard",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "never"
    },
    "show_diagnostics": "errors",
    "indent_guides": {
      "show": "always"
    },
    "hide_root": false
  },
  // File Exclusions (matching VS Code)
  "file_scan_exclusions": [
    "**/.git",
		"**/.svn",
		"**/.hg",
		"**/CVS",
		"**/.DS_Store",
		"**/Thumbs.db",
		"**/.classpath",
		"**/.settings",
		"**/.vscode",
		"**/.idea",
		// "**/node_modules",
		"**/.serverless",
		"**/build",
		// "**/dist",
		"**/coverage",
		// "**/.venv",
		"**/__pycache__",
		"**/.ropeproject",
		"**/.pytest_cache",
		"**/.ruff_cache",
    // "**/bin",
    // "**/obj",
    // "**/bower_components",
    // "**/*.code-search",
    "**/.git/objects/**",
    "**/.git/subtree-cache/**",
    "**/.hg/store/**"
  ],
  "file_scan_inclusions": [
    ".env",
    ".venv"
  ],
  // Outline Panel
  "outline_panel": {
    "dock": "right",
    "default_width": 350,
    "button": true,
    "file_icons": true,
    "folder_icons": true,
    "git_status": false,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },

  // Terminal
  "terminal": {
    "font_family": "Iosevka Nerd Font",
    "font_size": 14,
    "font_weight": 400,
    "button": true,
    "toolbar": {
      "breadcrumbs": false
    },
    "copy_on_select": true,
    "dock": "bottom",
    "default_width": null,
    "default_height": 600,
    "working_directory": "current_project_directory",
    "env": {
      "EDITOR": "zed -w",
      "VISUAL": "zed -w"
    },
    "blinking": "off",
    // "alternate_scroll": "off",
    // "option_as_meta": false,
    "shell": "system",
    // "line_height": "standard",
    "detect_venv": {
      "on": {
        "activate_script": "default",
        "directories": [".env", "env", ".venv", "venv"]
      }
    }
  },
  // Git Configuration
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 100,
    "branch_picker": null,
    "inline_blame": {
      "enabled": false
    },
    "hunk_style": "staged_hollow"
  },
  "git_panel": {
    "dock": "right"
  },
  // Diagnostics
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 100
      // "padding": 4,
      // "min_column": 0,
      // "max_severity": null
    }
  },
  // Copilot/AI Features
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "subtle",
    "enabled_in_text_threads": true
    // "copilot": {
    //   "proxy": null,
    //   "proxy_no_verify": null,
    //   "enterprise_uri": null
    // },
  },
  // AI Agent
  "show_edit_predictions": true,
  "agent": {
    "default_profile": "ask",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "dock": "left",
    "button": true
  },
  // Default Formatter
  "formatter": "prettier",

  "file_types": {
    "Diff": ["diff"],
    "Json": ["json", "jsonc"],
    "C++": ["cpp", "cxx", "cc", "c++", "hpp", "hxx", "h++", "hh"],
    "C": ["C", "H"],
    "Python": ["py", "pyx", "pyi", "pyw"],
    "C#": ["cs", "csx"],
    "CMake": ["CMakeLists.txt"],
    "Dockerfile": ["Dockerfile", "Dockerfile.*"]
  },
  // "code_actions_on_format": { },

  // Language Server Protocol (LSP) Settings
  "lsp": {
    "prettier": {},
    "biome": {
      "settings": {
        "config_path": "./biome.json"
      }
    },
    "omnisharp": {
      "binary": {
        "arguments": ["-lsp"]
      }
    },
    "yaml-language-server": {},
    "pyright": {
      "settings": {
        // "pyright": {
        //   "disableOrganizeImports": false
        // },
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "standard",
          "extraPaths": ["./src", "./lib", "./backend", "./venv", "./env"],
          "stubPath": "./typings",
          "autoSearchPaths": true,
          "autoImportCompletions": true,
          "useLibraryCodeForTypes": true
        }
      }
    },
    "ruff": {
      // "initialization_options": {
      //   "settings": {
      //     "organizeImports": true
      //   }
      // }
    },
    "powershel-es": {
      "binary": {
        "path": "pwsh", // or "powershell" on Windows
        "arguments": ["-NoLogo", "-NoProfile"]
      }
    },

    // C++ (clangd)
    "clangd": {
      "binary": {
        "arguments": [
          // "--clang-tidy",
          // "--background-index",
          // "--completion-style=detailed",
          // "--function-arg-placeholders",
          // "--header-insertion=iwyu",
          // "--pch-storage=memory",
          // // Add diagnostic flags here:
          // "--compile-commands-dir=.",
          // "--fallback-style=none"
        ]
      },
      "initialization_options": {
        "clangdFileStatus": true,
        "usePlaceholders": true,
        "completeUnimported": true,
        "semanticHighlighting": true
        // Add clang-tidy configuration:
        // "fallbackFlags": ["-Wno-everything", "-Werror=return-type"]
      }
    }
  },

  // Language-specific Settings
  "languages": {
    "JSON": {
      "wrap_guides": [],
      "use_autoclose": true
      //   "formatter":{
      //     "language_servers": ["!biome", "prettier"],
      //   },
      //   // "formatter": "prettier",
      //   "tab_size": 2
    },
    "JSONC": {
      "wrap_guides": [],
      "use_autoclose": true
      //   "formatter":{
      //     "language_servers": ["!biome", "prettier"],
      //   },
      //   "tab_size": 2
    },
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!biome"]
    },
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!biome"]
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      },
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!biome"]
    },
    "TOML": {
      "tab_size": 2
    },
    "Markdown": {
      "remove_trailing_whitespace_on_save": false,
      "format_on_save": "off",
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 179
    },
    "Python": {
      "code_actions_on_format": {
        "sourc.orgaizeImorts.ruff": true
      },
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["pyright", "ruff"],
      "tab_size": 2
    },
    "C": {
      "formatter": "auto",
      "tab_size": 2
    },
    "C++": {
      "formatter": "auto",
      "tab_size": 2
    },
    "CSharp": {
      "language_servers": ["omnisharp"],
      "formatter": "language_server",
      "tab_size": 4
    },
    "Lua": {}
    // "CMake": {
    //   "preferred_line_length": 179,
    //   "formatter": "language_server"
    // }
  }
}
