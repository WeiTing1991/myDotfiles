{
  // Zed settings// Vim//zed.dev/docs/vim?highlight=vim#vim-mode
  "bottom_dock_layout": "full",
  "confirm_quit": true, // Telemetry
  "telemetry": {
    "metrics": false,
    "diagnostics": false,
  },
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "remote": false,
      "settings": {
        "context7_api_key": "ctx7sk-93a98b27-fbf2-4ad3-9386-756ddfe709fd",
      },
    },
  },
  "theme": "Ayu Light",
  "agent_servers": {
    "claude": {
      "favorite_config_option_values": {
        "mode": ["plan"],
      },
    },
  },
  "vim_mode": true,
  "edit_predictions": {
    "provider": "copilot",
  },
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 200,
    "cursor_shape": {
      "normal": "block",
      "insert": "bar",
      "replace": "underline",
      "visual": "hollow",
    },
  },
  "current_line_highlight": "none", // ysiw
  "file_types": {
    "Diff": ["diff"],
    "Json": ["jsonc", "json"],
    "C++": ["cpp", "cxx", "cc", "c++", "hpp", "hxx", "h++", "hh"],
    "C": ["C", "H"],
    "Python": ["py", "pyx", "pyi", "pyw"],
    "C#": ["cs", "csx"],
    "CMake": ["CMakeLists.txt"],
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "XML": ["xml", "xsl", "xsd", "xslt", "csproj", "Directory.*"],
    "TOML": ["toml", ".clang-format"],
    "YAML": ["yaml", "yml", ".editorconfig"],
  },
  // Default Formatter
}
