# Top-most EditorConfig file
root = true

# Default settings (applies to all files unless overridden)
[*]
indent_size = 2
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 179

[*.md]
indent_size = 2
indent_style = tab
trim_trailing_whitespace = false

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.yml]
indent_size = 2

[*.rst]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[{*.cmake,CMakeLists.txt}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{cs,csx}]
# Non-configurable behaviors
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false
dotnet_diagnostic.IDE0005.severity = warning
dotnet_diagnostic.IDE0090.severity = none

# Configurable behaviors
end_of_line = lf
indent_style = space
indent_size = 4
max_line_length = 100

[*.{config,csproj,props,slnx,targets,xaml,xml}]
indent_style = space
indent_size = 2
max_line_length = 100

[LICENSE]
insert_final_newline = false
